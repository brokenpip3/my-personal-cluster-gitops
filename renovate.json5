{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  dependencyDashboardTitle: 'Depenendecies',
  flux: {
    managerFilePatterns: [
      '/clusters/.+\\.ya?ml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/clusters/.+\\.ya?ml$/',
      '/apps/.+\\.ya?ml$/',
      '/infra/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/clusters/.+\\.ya?ml$/',
      '/apps/.+\\.ya?ml$/',
      '/infra/.+\\.ya?ml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      description: 'Match Helm values for non-standard yamls',
      managerFilePatterns: [
        '/infra/.+\\.ya?ml$/',
      ],
      matchStringsStrategy: 'any',
      matchStrings: [
        'repository:\\s?"?(?<depName>[^\\s"]*)"?\\s*?tag:\\s?"?(?<currentValue>[^\\s"]*)"?',
        'imageName:\\s?"?(?<depName>[^\\s"]*)"?\\s*?:\\s?"?(?<currentValue>[^\\s"]*)"?',
      ],
      datasourceTemplate: 'docker',
    },
    {
      customType: 'regex',
      description: 'Match Helm Releases for helm charts',
      managerFilePatterns: [
        '/apps/.+\\.ya?ml$/',
        '/infra/.+\\.ya?ml$/',
      ],
      matchStringsStrategy: 'any',
      matchStrings: [
        'chart:\\s?"?(?<depName>[^\\s"]*)"?\\s*?version:\\s?"?(?<currentValue>[^\\s"]*)"?',
      ],
      datasourceTemplate: 'helm',
    },
    {
      customType: 'regex',
      description: [
        'Process custom dependencies',
      ],
      managerFilePatterns: [
        '/apps/.+\\.ya?ml$/',
        '/infra/.+\\.ya?ml$/',
      ],
      matchStrings: [
        'datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+: (&\\S+\\s)?(?<currentValue>\\S+)',
        'datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+/(?<currentValue>(v|\\d)[^/]+)',
      ],
      datasourceTemplate: '{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}',
    },
  ],
  packageRules: [
    {
      matchDatasources: [
        'helm',
      ],
      matchManagers: [
        'custom.regex',
      ],
      matchPackageNames: [
        'loki',
      ],
      registryUrls: [
        'https://grafana.github.io/helm-charts',
      ],
    },
    {
      matchDatasources: [
        'helm',
      ],
      matchManagers: [
        'custom.regex',
      ],
      matchPackageNames: [
        'prometheus',
      ],
      registryUrls: [
        'https://prometheus-community.github.io/helm-charts',
      ],
    },
    {
      matchDatasources: [
        'helm',
      ],
      matchManagers: [
        'custom.regex',
      ],
      matchPackageNames: [
        'storage',
      ],
      registryUrls: [
        'https://github.com/rancher/local-path-provisioner',
      ],
    },
  ],
}
